{% extends '_layouts/_admin.html.twig' %}

{% block title %}Order{% endblock %}
{% block h1 %}Orders{% endblock %}
{% block body %}

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Référence</th>
                        <th>Date de création</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Référence</th>
                        <th>Date de création</th>
                        <th>Action</th
                    </tr>
                </tfoot>
                <tbody>
                    {% for order in orders %}
                    <tr>
                        <td>{{ order.reference }}</td>
                        <td>{{ order.createdAt|date('d/m/y h:i:s' ) }}</td>
                        <td>
                            <a href="{{ path('admin_orders_details', {reference : order.reference}) }}" class="btn btn-primary">Details</a> 
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}