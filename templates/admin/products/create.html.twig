{% extends '_layouts/_admin.html.twig' %}

{% block title %}Create Product{% endblock %}
{% block body %}
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create a new Product</h1>
                            </div>
                            {{ form_start(productForm, {'attr': {'class' : 'product'}}) }}
                            <div class="form-group">
                                    {{ form_row(productForm.category) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(productForm.name) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(productForm.description) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(productForm.price) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(productForm.quantity) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(productForm.soldPrice) }}
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Create</button>
                            {{ form_end(productForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}